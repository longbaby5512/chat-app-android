<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="4dp"
    android:paddingVertical="3dp">

    <TextView
        android:id="@+id/tv_chat_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sender_message_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        android:text="@string/example_message"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tv_chat_time"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8"/>

    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/example_time"
        android:textSize="10sp"
        android:visibility="gone"
        android:textColor="#919191"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>